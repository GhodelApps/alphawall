<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/about_header">
        <Preference
            app:key="@string/app_key"
            app:title="@string/app_name"
            app:icon="@drawable/ic_android"/>

        <Preference
            app:key="@string/author_key"
            app:title="@string/author_title"
            app:summary="@string/author_summary"
            app:icon="@drawable/ic_person" />

        <Preference
            app:key="@string/github_key"
            app:title="@string/github_title"
            app:summary="@string/github_summary"
            app:icon="@drawable/ic_github" />

        <Preference
            app:key="@string/api_key"
            app:title="@string/api_title"
            app:summary="@string/api_summary"
            app:icon="@drawable/ic_api" />
    </PreferenceCategory>

</PreferenceScreen>