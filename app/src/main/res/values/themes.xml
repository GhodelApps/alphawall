<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AlphaWall.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/purple_900</item>
        <item name="postSplashScreenTheme">@style/Theme.AlphaWall</item>
    </style>

    <style name="Theme.AlphaWall" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="bottomNavigationStyle">@style/Widget.AlphaWall.BottomNavigationView</item>

        <item name="appBarLayoutStyle">@style/Widget.AlphaWall.AppBarOverlay</item>
        <item name="toolbarStyle">@style/Widget.AlphaWall.ToolBar</item>

        <item name="textAppearanceHeadline6">@style/TextAppearance.AlphaWall.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AlphaWall.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AlphaWall.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.AlphaWall.Button</item>

        <item name="floatingActionButtonStyle">@style/Widget.AlphaWall.FloatingActionButton</item>

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/purple_100</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/purple_900</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:colorBackground">@color/purple_900</item>
        <item name="colorOnBackground">?colorPrimary</item>

        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>

        <item name="colorControlNormal">?colorPrimary</item>
        <item name="colorControlActivated">?colorPrimaryDark</item>
    </style>

</resources>